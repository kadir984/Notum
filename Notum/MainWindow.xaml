        <Button x:Name="btnDersAra" Content="Ders Ara" HorizontalAlignment="Left" Margin="176.997,271,0,0" VerticalAlignment="Top" Width="108" Height="22" Grid.Column="1"/>
        <ComboBox x:Name="cbDersAra" HorizontalAlignment="Left" Margin="8.997,271,0,0" VerticalAlignment="Top" Width="163" TabIndex="1" Grid.Column="1"/>
